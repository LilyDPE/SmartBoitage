# SmartBoitage PRO - Environment Variables Configuration

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string with PostGIS
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://smartboitage:password@localhost:5432/smartboitage_db

# ============================================
# OPENROUTESERVICE API
# ============================================
# Get your API key from https://openrouteservice.org/dev/#/signup
ORS_API_KEY=your_ors_api_key_here
ORS_BASE_URL=https://api.openrouteservice.org

# ============================================
# OVERPASS API
# ============================================
# OpenStreetMap Overpass API endpoint
# Default: https://overpass-api.de/api/interpreter
# Alternatives:
# - https://overpass.kumi.systems/api/interpreter
# - https://lz4.overpass-api.de/api/interpreter
OVERPASS_URL=https://overpass-api.de/api/interpreter

# ============================================
# APPLICATION
# ============================================
# Application URL (for PWA and OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ============================================
# OPTIONAL: AUTHENTICATION
# ============================================
# Uncomment and configure if you want to add authentication
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your_random_secret_here

# ============================================
# OPTIONAL: ANALYTICS
# ============================================
# Google Analytics tracking ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# OPTIONAL: ERROR TRACKING
# ============================================
# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# ============================================
# OPTIONAL: MAP TILES
# ============================================
# Custom tile server (if not using OpenStreetMap default)
# NEXT_PUBLIC_TILE_SERVER=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# ============================================
# DEVELOPMENT
# ============================================
# Enable debug logging
DEBUG=false

# PostgreSQL pool configuration
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=10000
